{
    "manifest_version": 2,
    "name": "采集商品",
    "description": "采集商品信息",
    "version": "2",
    "background" : { "scripts": ["background.js"] },
    "permissions": [
        "tabs", 
        "contextMenus",
        "http://*.tshenbian.com/*",
        "http://item.jd.com/*",
        "http://item.taobao.com/item.htm*",
        "http://detail.tmall.com/item.htm*"
    ],
    "browser_action": {
        "default_icon": "icon.jpg",
        "default_popup": "popup.html",
        "default_title": "网页流量统计"
    }
}